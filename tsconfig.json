{
    "compilerOptions": {
        "experimentalDecorators": true,
        "rootDir": "./src",
        "module": "es6",
        "target": "es2021",
        "noImplicitAny": false,
        "sourceMap": false,
        "outDir": "./dist",
        "noEmitOnError": true,
        "declaration": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": ["es2021","esnext.asynciterable", "dom"],
        "emitDecoratorMetadata": true,
    },
    "exclude": [
      "../node_modules",
        "dist",
        "examples"
    ]
}
